<div class="container-fluid recipe-single-page p-0">

  <div class="row">
    <div
      class="bg-image d-flex flex-column justify-content-center align-items-center"
      style="background: url({{recipe.images.LARGE.url}}) center; background-repeat:no-repeat; background-size: cover; height:80vh;"
    >

      <h5 class="mb-3 h2 text-white">{{recipe.label}}</h5>
      <p class="align-text-bottom text-white">Mark as favourite<a href="#makefavourite" class="btn btn-lg">â™¡</a>
      </p>
    </div>
    <div class="row p-0 my-2">
      <div class="col col-xs-12 col-lg-6 p-0">
        <div class="col-inner-container border border-1 rounded p-3 m-2"><h3>Ingredients</h3>
          <ul>
            {{#each recipe.ingredientLines}}
              <li>{{this}} </li>
            {{/each}}
          </ul>
          <h5>Preparation</h5>
          <button type="button" class="btn btn-light" a href="#">Instructions</button>
          <span>Originally posted on <a href="#">Link</a></span></div>
      </div>
    
    <div class="col col-xs-12 col-lg-6 p-0">
      <div class="col-inner-container border border-1 rounded p-3 m-2">
        <div class="accordion" id="nutrient-info">
          <div class="accordion-item">
            <h2 class="accordion-header" id="nutrient-info-header">
              <button
                class="accordion-button"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#nutrient-info-body"
                aria-expanded="true"
                aria-controls="nutrient-info-body"
              >
                Nutrient Info
              </button>
            </h2>
            <div id="nutrient-info-body" class="accordion-collapse collapse" aria-labelledby="nutrient-info-header" data-bs-parent="#nutrient-info">
              <div class="accordion-body">
                {{#each recipe.totalNutrients}}
                  <p><b>{{this.label}}: </b>{{this.quantity}} {{this.unit}}</p>
                {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

