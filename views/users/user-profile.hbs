<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
          <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" name="existingImage" width="300px" src="{{userInSession.profilePicture}}"><span> </span></div>
            <input type="file" name="profile-cover-image" />
            <button type="submit" class="btn btn-primary text-left">Edit profile pic</button>
            </form>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Information</h4>
                </div>
                <div class="row mt-3">
                  <div class="col-md-12"><label class="labels">Name</label><input type="text" class="form-control" placeholder="Your name" value="">{{userInSession.name}}</div>
                    <div class="col-md-12"><label class="labels">Username</label><input type="text" class="form-control" placeholder={{userInSession.username}} value=""></div>
                    <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder={{userInSession.email}} value=""></div>
                    <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Allergies</legend>
                    <form method="POST" action="send">
                            <div>
                                <input type="checkbox" name="allergies" value="dairy">Dairy
                                <br>
                                <input type="checkbox" name="allergies" value="eggs">Eggs
                                <br>
                                <input type="checkbox" name="allergies" value="sesame">Sesame
                                <br>
                                <input type="checkbox" name="allergies" value="peanut">Peanut
                                <br>
                                <input type="checkbox" name="allergies" value="tree-nut">Tree-nut
                                <br>
                                <input type="checkbox" name="allergies" value="celery">Celery
                            </div>
                            </form>
                          </fieldset>
                    </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
            </div>
        </div>
    </div>
</div>
</div>
</div>


{{else}}
  <p>Still no logged in user, sorry!</p>
{{/if}}
</div>



